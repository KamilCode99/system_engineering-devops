#!/usr/bin/env bash
# Find the PID of the 4-to_infinity_and_beyond script
pid=$(pgrep -f "4-to_infinity_and_beyond")

# Check if the process was found
if [ -n "$pid" ]; then
  # Use the Bash built-in `> /proc/$pid/fd/0` trick to send EOF (or something to cause termination)
  # Here we send a SIGTERM by writing to /proc/$pid/attr/oom_score_adj
  # OR more safely use `exec` to send a signal via /proc interface
  echo -15 > /proc/$pid/oom_score_adj
fi
